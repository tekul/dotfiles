#! /bin/bash

SIZE=$1

[ -z "$SIZE" ] && SIZE=14

#printf '\33]50;%s\007' "xft:Inconsolata:size=$SIZE"
printf '\33]50;%s\007' "xft:SauceCodePro Nerd Font Mono:size=$SIZE,xft:Symbols Nerd Font,xft:Noto Sans Mono CJK SC:size=$SIZE,xft:FontAwesome,xft:Noto Color Emoji,xft:Hanazono Mincho B Regular:size=$SIZE,xft:Hanazono Mincho C Regular:size=$SIZE"
